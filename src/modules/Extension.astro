---
import Switch from '../components/Switch.astro';

const tratamiento = [
  "1.1 IMPLICA UN NÚMERO MINIMO DE SUJETOS/INTERESADOS",
	"1.2 IMPLICA UN NÚMERO MEDIO DE SUJETOS/INTERESADOS",
	"1.3 IMPLICA UN NÚMERO MAXIMO DE SUJETOS/INTERESADOS", 
	"2.	EL VOLUMEN DE DATOS QUE SE TRATAN ES ELEVADO?",
	"3.	LA DURACIÓN DEL TRATAMIENTO ES ELEVADA?",
	"4.	SE REALIZA UN TRATAMIENTO SISTEMÁTICO, ORGANIZADO Y METÓDICO?",
	"5.	5.	SE REALIZAN TRATAMIENTOS A GRAN ESCALA?"
];
const finalidad = [
  "1.	CUÁL ES LA FINALIDAD DEL TRATAMIENTO Y PORQUE SE NECESITAN DATOS PERSONALES?",
	"2.	EL INTERESADO PRESTO SU CONSENTIMIENTO?",
	"3.	EXISTE RELACIÓN CONTRACTUAL ENTRE EL INTERESADO Y LA EMPRESA?", 
	"4.	CUÁL ES EL INTERÉS LEGÍTIMO DE LA EMPRESA?",
];
---

<section class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
	<div class="flex m-auto">
		<h2 class="p-6 text-4xl font-extrabold m-auto bg-white dark:bg-gray-800 rounded-lg shadow-md"> EXTENSION DEL TRATAMIENTO </h2>
	</div>
	  <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">EL TRATAMIENTO</h2>
  <form action="/submit" method="post">
    {tratamiento.map((pregunta, index) => (
      <Switch id={`switch-${index}`} label={pregunta} />
    ))}
    <button
      type="submit"
      class="mt-4 w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
    >
      Enviar
    </button>
  </form>
</section><section class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
	  <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">FINALIDAD DEL TRATAMIENTO</h2>
  <form action="/submit" method="post">
    {finalidad.map((pregunta, index) => (
      <Switch id={`switch-${index}`} label={pregunta} />
    ))}
    <button
      type="submit"
      class="mt-4 w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
    >
      Enviar
    </button>
  </form>
</section>
