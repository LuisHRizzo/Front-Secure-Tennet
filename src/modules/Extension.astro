---
import Switch from '../components/Switch.astro'

const tratamiento = [
  'IMPLICA UN NÚMERO MINIMO DE SUJETOS/INTERESADOS',
  'IMPLICA UN NÚMERO MEDIO DE SUJETOS/INTERESADOS',
  'IMPLICA UN NÚMERO MAXIMO DE SUJETOS/INTERESADOS',
  'EL VOLUMEN DE DATOS QUE SE TRATAN ES ELEVADO?',
  'LA DURACIÓN DEL TRATAMIENTO ES ELEVADA?',
  'SE REALIZA UN TRATAMIENTO SISTEMÁTICO, ORGANIZADO Y METÓDICO?',
  'SE REALIZAN TRATAMIENTOS A GRAN ESCALA?'
]
const finalidad = [
  'CUÁL ES LA FINALIDAD DEL TRATAMIENTO Y PORQUE SE NECESITAN DATOS PERSONALES?',
  'EL INTERESADO PRESTO SU CONSENTIMIENTO?',
  'EXISTE RELACIÓN CONTRACTUAL ENTRE EL INTERESADO Y LA EMPRESA?',
  'CUÁL ES EL INTERÉS LEGÍTIMO DE LA EMPRESA?'
]
---

<section class='rounded-lg bg-white p-6 shadow-md dark:bg-gray-800'>
  <div class='m-auto flex'>
    <h2
      class='m-auto rounded-lg bg-white p-6 text-4xl font-extrabold shadow-md dark:bg-gray-800'
    >
      EXTENSION DEL TRATAMIENTO
    </h2>
  </div>
  <h2 class='mb-4 text-2xl font-semibold text-gray-800 dark:text-white'>
    EL TRATAMIENTO
  </h2>
  <form action='/submit' method='post'>
    {
      tratamiento.map((pregunta, index) => (
        <Switch id={`switch-${index}`} label={pregunta} />
      ))
    }
    <button
      type='submit'
      class='mt-4 w-full rounded-lg bg-primary-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 sm:w-auto'
    >
      Enviar
    </button>
  </form>
</section><section class='rounded-lg bg-white p-6 shadow-md dark:bg-gray-800'>
  <h2 class='mb-4 text-2xl font-semibold text-gray-800 dark:text-white'>
    FINALIDAD DEL TRATAMIENTO
  </h2>
  <form action='/submit' method='post'>
    {
      finalidad.map((pregunta, index) => (
        <Switch id={`switch-${index}`} label={pregunta} />
      ))
    }
    <button
      type='submit'
      class='mt-4 w-full rounded-lg bg-primary-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 sm:w-auto'
    >
      Enviar
    </button>
  </form>
</section>
